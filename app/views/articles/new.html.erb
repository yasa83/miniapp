<div id="wrapper">
  <div id="header" class="content-block">
    <section class="content-block">
    </section>
    <div class="content-block" id="post">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 blog-post">
            <h2 class="post">Post a new article</h2>
              <%= form_for @article, id: "contactForm" do |f| %>
                <div class="form-group">
                  <%= f.label :title, id: "title" %>
                  <%= f.text_area :title, class: "form-control form-control-white", placeholder: 'Enter title' %>
                </div>
                <div class="form-group">
                  <%= f.label :text, id: "text" %>
                  <%= f.text_area :text, class: "form-control form-control-white", placeholder: 'Enter text' %>
                </div>
                <div class="form-group">
                  <%= f.label :image, id: "image" %>
                  <%= f.file_field :image, class: " 'form__mask__image" %>
                </div>
                  <div id="contactFormResponse"></div>
                  <div class="form-group">
                      <input id="cfsubmit" type="submit" class="text-center btn btn-o-white" value="POST">
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

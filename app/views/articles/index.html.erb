<div id="wrapper">
  <div id="header" class="content-block">
    <section class="center">
      <div class="slogan">
        Articles
      </div>
      <div class="secondary-slogan">
        It is important whether it is interesting
      </div>
    </section>
  </div>
  <% @articles.each do |article| %>
    <div id="about" class="about-us">
        <div class="container about-sec">
          <header class="block-heading cleafix">
            <div class="title-page">
              <p class="main-header">name</p>
              <p class="sub-header"><%= article.title %></p>
              <p class="sub-header"><%= article.created_at %></p>
            </div>
          </header>
          <br><br><br>
          <div class="divide50"></div>
            <div class="row">
              <% if article.image? %>
              <div class="col-md-3 text-center">
                  <image src="<%= article.image %>">
                  </image>
                <% end %>
              </div>
              <div class="col-md-8 text-center">
                  <%= simple_format(article.text) %>
              </div>
            </div>
        </div>
        <hr size="30">
    </div>
  <% end %>
  <%= paginate(@articles) %>
</div>


